{
  "name": "@battis/qui-cli",
  "version": "0.1.9",
  "description": "Quickly build a CLI app",
  "author": {
    "name": "Seth Battis",
    "url": "https://github.com/battis"
  },
  "license": "GPL-3.0",
  "target": "node",
  "main": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types",
      "import": "./dist/esm",
      "default": "./dist/esm"
    }
  },
  "engines": {
    "node": ">=12.17"
  },
  "scripts": {
    "release": "run-s release:*",
    "release:build": "npm run build",
    "release:publish": "np --yolo --omit=dev",
    "build": "run-s build:*",
    "build:clean": "shx rm -rf dist",
    "build:esm": "babel src --extensions .ts --out-dir dist/esm --out-file-extension .mjs --source-maps --config-file ./babel/esm.json",
    "build:types": "tsc"
  },
  "dependencies": {
    "@inquirer/prompts": "^2.3.1",
    "app-root-path": "^3.1.0",
    "chalk": "^4.1.2",
    "cron-validate": "^1.4.5",
    "dotenv": "^16.3.1",
    "email-validator": "^2.0.4",
    "is-valid-path": "^0.1.1",
    "jackspeak": "^2.2.2",
    "ora": "^6.3.1",
    "shelljs": "^0.8.5",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.9",
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-typescript": "^7.22.5",
    "@battis/eslint-config": "latest",
    "@battis/prettier-config": "latest",
    "@tsconfig/recommended": "^1.0.2",
    "@types/is-valid-path": "^0.1.0",
    "@types/node": "^20.4.5",
    "@types/shelljs": "^0.8.12",
    "babel-plugin-add-import-extension": "^1.6.0",
    "babel-plugin-add-module-exports": "^1.0.4",
    "np": "^8.0.4",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.4"
  },
  "prettier": "@battis/prettier-config",
  "eslintConfig": {
    "extends": "@battis/eslint-config"
  }
}
