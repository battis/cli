{
  "name": "@battis/cli",
  "version": "0.1.1",
  "description": "Quickly build a CLI app",
  "author": {
    "name": "Seth Battis",
    "url": "https://github.com/battis"
  },
  "license": "GPL-3.0",
  "type": "module",
  "main": "lib/index.js",
  "engines": {
    "node": "*"
  },
  "scripts": {
    "clean": "shx rm -rf lib",
    "build": "npm run clean && tsc",
    "deploy": "npm run build && npx np --no-tests"
  },
  "devDependencies": {
    "@battis/eslint-config": "github:battis/eslint-config",
    "@battis/prettier-config": "github:battis/prettier-config",
    "@tsconfig/recommended": "^1.0.2",
    "@types/node": "^20.3.1",
    "np": "^8.0.4",
    "shx": "^0.3.4",
    "typescript": "^5.1.3"
  },
  "prettier": "@battis/prettier-config",
  "eslintConfig": {
    "extends": "@battis/eslint-config",
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    }
  },
  "dependencies": {
    "@inquirer/prompts": "^2.1.1",
    "chalk": "^5.2.0",
    "dotenv": "^16.3.1",
    "email-validator": "^2.0.4",
    "jackspeak": "^2.2.1",
    "winston": "^3.9.0"
  }
}
