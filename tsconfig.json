{
  "extends": "@tsconfig/recommended",
  "compilerOptions": {
    "target": "es5",
    "module": "es2020",
    "outDir": "lib",
    "moduleResolution": "node",
    "lib": ["es2020"],
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "lib"]
}
